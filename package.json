{
  "name": "adb-record-screen",
  "version": "1.11.0",
  "title": "adb record screen",
  "description": "Screen recording function using Android Debug Bridge (adb).",
  "keywords": [
    "adb",
    "shell",
    "screenrecord",
    "record",
    "screen"
  ],
  "homepage": "https://github.com/blueimp/adb-record-screen",
  "author": {
    "name": "Sebastian Tschan",
    "url": "https://blueimp.net"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/blueimp/adb-record-screen.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "devDependencies": {
    "@types/mocha": "5",
    "@types/node": "13",
    "eslint": "6",
    "eslint-config-blueimp": "1",
    "eslint-config-prettier": "6",
    "eslint-plugin-jsdoc": "18",
    "eslint-plugin-node": "11",
    "eslint-plugin-prettier": "3",
    "prettier": "1",
    "typescript": "3"
  },
  "eslintConfig": {
    "extends": [
      "blueimp",
      "plugin:jsdoc/recommended",
      "plugin:node/recommended",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "pretest": "eslint . && tsc",
    "test": "docker-compose run --rm test",
    "posttest": "docker-compose down",
    "build": "tsc -p tsconfig.d.json",
    "preversion": "npm test",
    "version": "npm run build && git add -A index.d.ts",
    "postversion": "git push --tags origin HEAD && npm publish"
  },
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "main": "index.js"
}
